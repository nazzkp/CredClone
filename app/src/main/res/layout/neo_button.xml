<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <club.cred.neopop.TiltFrameLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:focusable="true"
        app:neopop_animate_on_touch="true"
        app:neopop_bottom_surface_color="#ADA02C"
        app:neopop_center_surface_color="#FFEB3B"
        app:neopop_shadow_height="4dp"
        app:neopop_shimmer_duration="3000"
        app:neopop_stroke_color="@color/black"
        app:neopop_shimmer_color="@color/white"
        app:neopop_is_stroked_button="true"
        app:neopop_show_shimmer="true"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/unlock_price"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:letterSpacing="0.02"
            android:textStyle="bold"/>

    </club.cred.neopop.TiltFrameLayout>

</LinearLayout>